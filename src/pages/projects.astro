---
import Layout from "../layouts/Layout.astro";
import { ProjectsData } from "../data/projectsData.js";
---

<Layout title="Welcome to Astro.">
  <main>
    <h1 class="text-center text-5xl font-bold my-3 mb-6">Portfolio</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-4 px-8 mb-6">
      {
        ProjectsData.map((info) => (
          <div class="box-card">
            <div class="m-2">
              <img
                src={`${info.src}`}
                class="rounded-lg"
                alt="img of project"
              />
            </div>
            <div>
              <h1 class="text-center my-2 text-white font-semibold">
                {info.name}
              </h1>
              <h1 class="bg-white/90 text-black/80 border-white border-2 mb-4 font-bold text-center px-2">
                {info.stack}
              </h1>
              <div class="grid grid-cols-1 mb-2">
                <a
                  class="btn-card bg-white rounded px-4 mx-4 text-center font-bold transition-transform hover:transform hover:scale-105"
                  href={`${info.link}`}
                  target="_blank"
                >
                  Details
                </a>
                <a
                  class={`btn-card rounded px-4 mx-4 text-center font-bold mt-2 
				  transition-transform hover:transform hover:scale-105 `}
                  href={`${info.github}`}
                  target="_blank"
                >
                  Github
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </main>
</Layout>

<style>
  .btn-card {
    background: linear-gradient(to bottom right, #c4c8ccb4, #ffffff);
    padding: 10px;
    border-radius: 12px;
    border: solid 1px rgba(255, 255, 255, 0.863);
    box-shadow: 0px 0px 10px #0e407e2a;
  }

  .box-card {
    background: linear-gradient(to bottom right, #020912dd, #272727);
    border-radius: 12px;
    border: solid 1px rgba(255, 255, 255, 0.863);
    box-shadow: 0px 0px 10px #0e407e2a;
  }
</style>

---
interface Props {
  text: string;
  src: string;
  style: string
}

const { text, src, style } = Astro.props;
---

<div class={`box-tech ${style} py-1 rounded-xl`}>
  <div class="">
    <img
      class="tech-img mx-auto"
      src={`../../public/Home/Tech Stack/${src}`}
      alt="icon-language"
    />
    <h1 class="text-xl font-bold my-auto">{text}</h1>
  </div>
</div>

<style>
  .tech-img {
    width: 30px;
    height: auto;
  }

  .box-tech {
    background: linear-gradient(to bottom right, #0e407e20, #ffffff);
    padding: 5px;
    border-radius: 12px;
    border: solid 1px rgba(255, 255, 255, 0.863);
    box-shadow: 0px 0px 10px #0e407e2a;
    transition: all 0.3s ease;
  }

  .box-tech:hover {
    transform: scale(1.05);
  }
</style>
